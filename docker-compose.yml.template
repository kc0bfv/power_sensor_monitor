version: "3.9"
services:
    webhook_catcher:
        build: ./webhook_catcher
        ports:
            - "8080:8080"
        volumes:
            - ./webhook_data:/opt/webhook_data/
        environment:
            PORT: "8080"
            URL_BASE: "webhook"
            WRITE_KEY: "PUT_A_RANDOM_STRING_HERE"
            READ_KEY: "PUT_A_DIFFERENT_RANDOM_STRING_HERE"
            WRITE_DIR: "/opt/webhook_data/"
